# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{json,jsonc,js,ts,mts,cts,tsx,jsx,mjs,yaml,yml,css,scss,less,md,mdx,mdc,html}]
indent_size = 2
max_line_length = 120
